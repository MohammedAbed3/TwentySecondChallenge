<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WhatDoYouKnowActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:id="@+id/card"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:id="@+id/tv_what_do_you_know_question"
            android:padding="10dp"
            android:text="asddddddddddddddddddddasdddddddddddddddddddddddddddddddddddddddddddddddd"
            />

    </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_above="@+id/btn_nxt_question"
    android:layout_marginTop="170dp"
    android:gravity="bottom"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_marginBottom="16dp"

    android:layout_height="wrap_content">


    <LinearLayout
        android:gravity="center"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- Player 1 Text -->
        <TextView
            android:id="@+id/tv_player1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1 Name"
            android:layout_marginBottom="10dp"
            android:textSize="22sp" />

        <!-- Player 1 Button -->
        <Button
            android:id="@+id/btn_player1_strike"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Strike" />
        <TextView
            android:id="@+id/tv_strike_player1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strike 0"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- Player 1 Text -->
        <TextView
            android:id="@+id/tv_player2_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2 Name"
            android:layout_marginBottom="10dp"

            android:textSize="22sp" />

        <!-- Player 1 Button -->
        <Button
            android:id="@+id/btn_player2_strike"

            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Strike" />
        <TextView
            android:id="@+id/tv_strike_player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strike 0"
            />
    </LinearLayout>

</LinearLayout>
    <Button
        android:id="@+id/btn_nxt_question"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:text="Next question" />

</RelativeLayout>